<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:text="SIMULATION OF EFFECTS OF GLOBAL WARMING USING AR"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="29dp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="CHAARU M K (1TJ16CS021)\nSHARATH KUMAR CG (1TJ17CS083)\nSATHISH YADAV (1TJ17CS082\nMOHAMMAD ISHTIYAAQ (1TJ17CS0)"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5sp"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/logo"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:maxHeight="140dp"
        android:src="@drawable/arlogo"
        android:layout_width="200dp"
        android:layout_height="200dp" />


</RelativeLayout>